    <script>
        // LOGICA DI GIOCO

        // LEVEL 1
        function checkLevel1() {
            const c1 = document.getElementById('check1').checked;
            const c2 = document.getElementById('check2').checked;
            const c3 = document.getElementById('check3').checked;
            const btn = document.getElementById('btn-level-1');

            if(c1 && c2 && c3) {
                btn.style.display = 'block';
                btn.style.opacity = '1';
                // Piccola animazione
                btn.innerText = "SBLOCCA LIVELLO 2";
            }
        }

        function nextLevel(levelNum) {
            // Nasconde livello corrente
            const current = document.querySelector('.level-card.active');
            current.classList.remove('active');
            
            // Mostra nuovo livello
            const next = document.getElementById('level-' + levelNum);
            next.style.display = 'block';
            // Timeout per permettere la transizione CSS
            setTimeout(() => {
                next.classList.add('active');
            }, 100);
            
            // Scroll automatico
            next.scrollIntoView({ behavior: 'smooth' });
        }

        // TYPEWRITER EFFECT SIMULATION
        function typeWriter(elementId, text, speed, callback) {
            let i = 0;
            document.getElementById(elementId).innerHTML = "";
            document.getElementById(elementId).classList.add('typing-cursor');
            
            function type() {
                if (i < text.length) {
                    document.getElementById(elementId).innerHTML += text.charAt(i);
                    i++;
                    setTimeout(type, speed);
                } else {
                    document.getElementById(elementId).classList.remove('typing-cursor');
                    if(callback) callback();
                }
            }
            type();
        }

        // LEVEL 2
        function playLevel2() {
            const input = document.getElementById('input-level-2').value;
            if(input.length < 5) {
                alert("Devi tirare la palla! Incolla il prompt nel box.");
                return;
            }

            const responseBox = document.getElementById('response-level-2');
            responseBox.style.display = 'block';
            
            const fakeGeminiResponse = "Dear Haddad Team, \n\nI hope this email finds you well. \n\nWe are reaching out regarding the upcoming Black Friday deliveries. We have noticed a potential delay of approximately 3 weeks for the goods, which is concerning for our campaign planning. \n\nCould you please provide an urgent update on the shipment status? \n\nBest regards,\n[Your Name] - Zalando YF&K Ops";

            typeWriter('type-level-2', fakeGeminiResponse, 15, () => {
                document.getElementById('btn-level-2').style.display = 'block';
            });
        }

        // LEVEL 3
        function playLevel3() {
            const input = document.getElementById('input-level-3').value;
            if(input.length < 3) {
                alert("Non mollare ora! Chiedi una modifica.");
                return;
            }

            const responseBox = document.getElementById('response-level-3');
            responseBox.style.display = 'block';

            const fakeGeminiResponseV2 = "Subject: Urgent: Delay Update - Black Friday\n\nDear Haddad Team,\n\nPlease see the affected orders below. We require an urgent update on the new ETA.\n\n| PO Number | Delay | New ETA |\n|-----------|-------|---------|\n| 4500123   | 3 Wks | TBC     |\n\nBest,\n[Your Name]";

            typeWriter('type-level-3', fakeGeminiResponseV2, 15, () => {
                document.getElementById('final-win').style.display = 'block';
                // Party effect (semplice cambio colore bordo)
                document.getElementById('level-3').style.borderColor = '#fff';
            });
        }

    </script>
